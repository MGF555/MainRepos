@model Exercises.Models.Data.Student

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Delete Student</h3>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m => m.StudentId)
            <p>Are you sure that you wish to delete the student @Html.DisplayFor(m => m.FirstName) @Html.DisplayFor(m => m.LastName)?</p>
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            @Html.ActionLink("Cancel", "Student", "Students", null, new { @class = "btn btn-sm btn-info" })
        }
    </div>
</div>     