@model CodeChampsAI.Models.UserPageViewModel
@{
    ViewBag.Title = "Users";
}

<div class="col-sm-10 col-md-8 col-lg-7">
    <h2>Users</h2>
    <table class="table table-bordered table-responsive table-striped">
        <tr>
            <th>Username</th>
            <th>Name</th>
            <th>Role</th>
            <th></th>
        </tr>
        @*foreach (var item in Model)*@
        @for(int x = 0; x < Model.Users.Count; x++)
        {
            <tr id="userrow-@x">
                <td id="username-@x">@Model.Users[x].UserName</td>
                <td id="name-@x">@(Model.Users[x].FirstName + " " + Model.Users[x].LastName)</td>
                <td id="role-@x">@Model.Users[x].UserRole</td>
                <td>
                <span onclick="UserRolesDropdown(@x)" style="cursor: pointer;" id="Edit-@x" class="btn btn-primary">Edit</span>
                  
                    <span onclick="DeleteUser(@x)" style="cursor: pointer;" id="Delete-@x" class="btn btn-danger">Delete</span>
                </td>
            </tr>
        }
    </table>

    @if (Model.PageNumber > 1 )
    {
        @Html.ActionLink("Previous", "Users", new { pageNumber = Model.PageNumber - 1 }, new { @class = "btn btn-primary" })
    }
    @if (Model.PageNumber < Model.MaxPages)
    {
        @Html.ActionLink("Next", "Users", new { pageNumber = Model.PageNumber + 1 }, new { @class = "btn btn-primary" })
    }
</div>

