@model List<CodeChampsAI.Models.StaticPage>

<div class="navbar navbar-default col-sm-3 col-lg-2">
    <div class="">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("AI Blog", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Posts", "Index", "Posts", new { }, new { })</li>
                <li>
                    @using (Html.BeginForm("Search", "Posts", FormMethod.Get, new { }))
                    {
                        @Html.TextBox("searchTerm", null, new { @class = "form-control" })
                        <br />
                                <button type="submit" class="btn btn-primary form-control">Search</button>
                    }
                </li>
                @foreach (var item in Model)
                {
                    <li>@Html.ActionLink(item.LinkName, "View", "Static", new { id = item.StaticPageId }, new { })</li>
                }

            </ul>

        </div>
    </div>
</div>

